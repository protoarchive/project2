<h1>Travelogue</h1>
<p>Your destination for peer reviews</p>

<%= form_tag home_index_path, :method => 'get' do %>
  <p>
    <%= label_tag :search %>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>

<div class="results">
	<% if @results %>
  <h3>Search Results</h3>
  <ul>
    <%= @results['results'].each do |r| %>
      <em><%= link_to r['name'], home_show_path %></em>
      <li><%= r['formatted_address'] %>
    <% end %>    
  </ul>
  <% end %>
</div>