<%= form_for @article do |a| %>
<div class="form-group">
  <%= a.label :title %>
  <%= a.text_field :title %>
</div>

<div class="form-group">
  <%= a.label :body %>
  <%= a.text_area :body %>
</div>

<div class="form-group">
  <%= a.label :location %>
  <%= a.text_field :location %>
</div>

<div class="form-group">
  <%= a.label :image %>
  <%= a.file_field :image %>
</div>

<%= a.submit 'Submit' %>
<% end %>